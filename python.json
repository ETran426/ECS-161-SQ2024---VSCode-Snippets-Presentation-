	"For loop": {
		"prefix": "flx",
		"body": [
			"for $1 in $2:"
		],
		"description": "simple shortcut: for loops"
	},

	"print": {
		"prefix": "clx",
		"body": [
			"print('${1:$CURRENT_MONTH_NAME/$CURRENT_DATE/$CURRENT_YEAR}')",
			"print('${2:$CURRENT_HOUR:$CURRENT_MINUTE:$CURRENT_SECOND}')"
		],
		"description": "prints the current date and time"
	},

	"If, elif and else": {
		"prefix": "iee",
		"body": [
			"if $1:",
			"\tprint($2)",
			"elif $3:",
			"\tprint($2)",
			"else:",
			"\tprint($5)"
		],
		"description": "simple shortcut: if, elif, and else"
	},

	"Read file":{
		"prefix": "rw",
		"body": [
			"${1:file1} = open('$TM_DIRECTORY/$2')",
		],
		"description": "read and write files"
	},
	
	"Convert different number types": {
		"prefix": "cn",
		"body": [
			"${1:value} = ${2|str(), int(), float()|}"
		],
		"description": "convert a number to a str, int, or float"
	}
	
}
